@model DistrictWebapp.Models.City
@{
    ViewData["Title"] = "Yeni Şehir Ekle";
}

<h2>Yeni Şehir Ekle</h2>

<form asp-action="Create" method="post">
    <div class="mb-3">
        <label asp-for="Name" class="form-label">Şehir Adı</label>
        <input asp-for="Name" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="PlateCode" class="form-label">Plaka Kodu</label>
        <input asp-for="PlateCode" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="Region" class="form-label">Bölge</label>
        <input asp-for="Region" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Kaydet</button>
    <a class="btn btn-secondary" href="/Admin">İptal</a>
</form>
