@model IEnumerable<DistrictWebapp.Models.City>

@{
    ViewData["Title"] = "Admin Panel - Şehir Yönetimi";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="mb-0">Şehir Yönetimi</h2>
        <a class="btn btn-success" href="/Admin/Create">
            <i class="bi bi-plus-circle"></i> Yeni Şehir Ekle
        </a>
    </div>

    <div class="card shadow rounded">
        <div class="card-body p-0">
            <table class="table table-striped table-hover mb-0">
                <thead class="table-dark">
                    <tr>
                        <th style="width:5%">#</th>
                        <th>Şehir Adı</th>
                        <th>Bölge</th>
                        <th style="width:15%">İşlem</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var city in Model)
                    {
                        <tr>
                            <td>@city.Id</td>
                            <td>@city.Name</td>
                            <td>@city.Region</td>
                            <td>
                                <a class="btn btn-sm btn-danger" href="/Admin/Delete/@city.Id" onclick="return confirm('Silmek istediğinize emin misiniz?')">
                                    <i class="bi bi-trash"></i> Sil
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
