@model IEnumerable<DistrictWebapp.Models.City>

@{
    ViewData["Title"] = "Şehirler";
}

<h2>Türkiye Şehirleri</h2>


<form method="get" asp-controller="CityMvc" asp-action="Index" class="mb-3">
    <div class="input-group">
        <input type="text" name="search" class="form-control" placeholder="Şehir ara..." value="@ViewData["Search"]" />
        <button class="btn btn-outline-primary" type="submit">Ara</button>
    </div>
</form>



<table class="table table-bordered table-hover">
    <thead class="table-dark">
        <tr>
            <th>#</th>
            <th>Şehir</th>
            <th>Plaka</th>
            <th>Bölge</th>
            <th>Detay</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var city in Model)
        {
            <tr>
                <td>@city.Id</td>
                <td>@city.Name</td>
                <td>@city.PlateCode</td>
                <td>@city.Region</td>
                <td>
                    <a class="btn btn-sm btn-primary" href="/CityMvc/Details/@city.Id">İncele</a>
                </td>
            </tr>
        }
    </tbody>
</table>
